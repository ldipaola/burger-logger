

<div class="heading-wrapper">
  <h1 class="burger-heading">Eat-Da-Burgers!</h1>
</div>

<div class="grid-container">
  
  <ul class="burgers">
    {{#each burgers}}
    {{#unless eaten }}
    <li>{{ burger }}<button class="devoured" data-id="{{id}}" data-devoured="{{eaten}}">
  		Devour it!
  	</button></li>
    {{/unless}}
    {{/each}}
  </ul>
  <div class="burger-wrapper"><img src="/assets/img/burger.png" alt="burger" width="300" height="300"></div>
  <ul class="devoured-burgers">
  {{#each burgers}}
  {{#if eaten }}
  <li>{{ burger }}</li>
  {{/if}}
  {{/each}}
</ul>
</div>
<br>


<div class="form-wrapper">
  <form class="create-form">
  
    <div class="form-group">
      <label for="burg">Add a burger:</label>
      <input type="text" id="burg" name="burger">
    </div>
  
    <button type="submit">Add Burger!</button>
  </form>
</div>